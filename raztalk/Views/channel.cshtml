@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>RazTalk - @ViewBag.Channel.Value.Name</title>
		<link href="/content/bootstrap.min.css" rel="stylesheet">
		<link href="/content/jquery.oembed.css" rel="stylesheet">
		<link href="/content/raztalk.css" rel="stylesheet">
		<base target="_blank">
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		<script src="/content/scrollreveal.min.js"></script>
        <script>
            window.sr = new ScrollReveal({ reset: true, duration: 250 });

            // Add class to <html> if ScrollReveal is supported
            if (sr.isSupported()) {
                document.documentElement.classList.add('sr');
            }
        </script>
	</head>
	<body class="container" data-token="@ViewBag.Token.Value" data-user="@ViewBag.User.Value.Name" data-channel="@ViewBag.Channel.Value.Name" data-pw="@ViewBag.Channel.Value.Password">
		<header class="row justify-content-center text-center reveal">
			<span class="m-2">User: <strong>@ViewBag.User.Value.Name</strong></span>
			<span class="m-2">Channel: <strong>@ViewBag.Channel.Value.Name</strong></span>
		</header>
		<section class="row">
			<table id="messages">
				<tbody>
					<tr class="info reveal">
						<td></td>
						<td id="users">Connected users: @ViewBag.Users.Value</td>
					</tr>
				</tbody>
			</table>
		</section>
		<footer class="row m-2 justify-content-center text-center reveal">
			<textarea id="message" disabled /></textarea>
		</footer>
		<script src="/content/jquery.min.js"></script>
		<script src="/content/jquery.signalR.min.js"></script>
		<script src="/content/jquery.linkify.min.js"></script>
		<script src="/content/jquery.oembed.js"></script>
		<script src="/content/jquery.playSound.js"></script>
		<script src="/content/raztalk.js"></script>
		<script src="/signalr/hubs"></script>
	</body>
</html>