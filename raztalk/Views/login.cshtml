@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RazTalk - login</title>
    <link href="/content/bootstrap.min.css" rel="stylesheet">
    <link href="/content/raztalk.css" rel="stylesheet">
    <base target="_blank">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="container">
    <header class="row justify-content-center text-center reveal">
	  @if (Model.Error != null) {
	  <strong class="text-danger">@Model.Error</strong>
	  }
	</header>
    <section>
      <div class="row justify-content-center">
        <div class="col m-5 text-center reveal">
          <form action="/" method="post" target="_self">
            <div>
              <strong>User / nickname:</strong><br />
              <input type="text" name="user" />
            </div>
            <div>
              <strong>Channel:</strong><br />
              <input type="text" name="channel" />
            </div>
            <div>
              <strong>Password:</strong><br />
              <input type="password" name="password" />
            </div>
            <div>
              <input type="submit" value="Enter" />
            </div>
          </form>
        </div>
      </div>
    </section>
    <script src="/content/jquery.min.js"></script>
    <script src="/content/scrollreveal.min.js"></script>
    <script src="/content/raztalk.js"></script>
  </body>
</html>