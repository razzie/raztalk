@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>RazTalk - login</title>
		<link href="/content/bootstrap.min.css" rel="stylesheet">
		<link href="/content/raztalk.css" rel="stylesheet">
		<base target="_blank">
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		<script src="/content/scrollreveal.min.js"></script>
        <script>
            window.sr = new ScrollReveal({ duration: 500 });

            // Add class to <html> if ScrollReveal is supported
            if (sr.isSupported()) {
                document.documentElement.classList.add('sr');
            }
        </script>
	</head>
	<body class="container">
		<header class="row justify-content-center text-center reveal">
		@if (ViewBag.Error.HasValue)
		{
			<strong class="text-danger">@ViewBag.Error.Value</strong>
		}
		</header>
		<section>
			<div class="row justify-content-center">
				<div class="col m-5 text-center reveal">
					<form action="/" method="post" target="_self">
						<div class="m-2">
							<strong>User / nickname:</strong><br />
							<input type="text" name="user" />
						</div>
						<div class="m-2">
                        @if (ViewBag.Channel.HasValue)
                        {
                            <input type="hidden" name="channel" value="@ViewBag.Channel.Value" />
                        }
                        else
                        {
                            <strong>Channel:</strong><br />
							<input type="text" name="channel" />
                        }
						</div>
						<div class="m-2">
							<strong>Password:</strong><br />
							<input type="password" name="password" />
						</div>
						<div class="m-2">
							<input type="submit" value="Enter" />
						</div>
					</form>
				</div>
			</div>
		</section>
		<script src="/content/jquery.min.js"></script>
		<script>
			$(document).ready(function () {
				window.sr = ScrollReveal({ reset: true, duration: 500 });
				sr.reveal('.reveal');

				$("input[name='user']").focus();
			});
		</script>
	</body>
</html>